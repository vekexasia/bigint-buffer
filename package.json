{
  "name": "@vekexasia/bigint-buffer",
  "version": "2.0.0",
  "description": "A library to convert bigint to and from buffers with Buffer polyfills and support for uint/int",
  "scripts": {
    "build": "tsc -b ./tsconfig.build.cjs.json ./tsconfig.build.esm.json ./tsconfig.build.types.json; node scripts/fix-esm.js",
    "lint": "npx eslint --ext .ts src test",
    "test": "jest --coverage",
    "pretest": "npm run build",
    "posttest": "npm run lint",
    "prepublishOnly": "npm run test"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./build/esm/index.js"
    },
    "./utils": {
      "types": "./dist/types/utils.d.ts",
      "import": "./dist/esm/utils.js",
      "require": "./dist/cjs/utils.js",
      "default": "./build/esm/utils.js"
    },
    "./buffer": {
      "types": "./dist/types/buffers/index.d.ts",
      "import": "./dist/esm/buffers/index.js",
      "require": "./dist/cjs/buffers/index.js",
      "default": "./build/esm/buffers/index.js"
    }
  },
  "dependencies": {
    "bigint-buffer": "^1.1.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@vitest/browser": "^1.3.1",
    "chai": "^5.1.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.7.0",
    "jsdom": "^24.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "*",
    "vitest": "^1.3.1",
    "webdriverio": "^8.33.1",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">= 14.0.0"
  },
  "author": {
    "url": "https://www.andreabaccega.com/",
    "email": "vekexasia@gmail.com",
    "name": "Andrea Baccega"
  },
  "license": "MIT"
}
